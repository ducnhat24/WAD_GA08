generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    name      String?
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id                  String   @id @default(cuid())
    name                String
    price               BigInt
    description         String?
    power               String // Công suất - power output in PS and kW
    torque              String
    acceleration        Float
    maxSpeed            Float
    combinedConsumption Float?
    CO2Emissions        Float?
    createdAt           DateTime @default(now())
    updatedAt           DateTime @updatedAt
    image               String?
}
